<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <t t-name="theme_multishop.custom_offer_snippet"
       name="Offer Product">
        <section id="ads_produts">
            <div class="container-fluid pt-5 pb-3">
                <div class="row px-xl-5">
                    <t t-foreach="data" t-as="pa">
                        <div class="col-md-6">
                            <div class="product-offer mb-30" style="height: 300px;">
                                <img class="img-fluid" t-att-src="image_url" alt="Image"/>
                                <div class="offer-text">
                                    <h6 class="text-white text-uppercase">Save
                                        <t t-esc="pa.discount"/>
                                    </h6>
                                    <h3 class="text-white mb-3">Special Offer</h3>
                                    <a href="/shop" class="btn btn-primary">Shop Now</a>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </section>
    </t>
</odoo>